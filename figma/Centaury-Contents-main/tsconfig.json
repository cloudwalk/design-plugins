{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@pages/*": ["src/app/pages/*"],
      "@components/*": ["src/app/components/*"],
      "@styles/*": ["src/app/styles/*"],
      "@shared/*": ["src/shared/*"],
      "@utils/*": ["src/utils/*"],
      "@app": ["src/app"],
      "@pages": ["src/app/pages"],
      "@components": ["src/app/components"],
      "@styles": ["src/app/styles"],
      "@shared": ["src/shared"],
      "@utils": ["src/utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
